{
  "manifest_version": 2,
  "name": "SCPper",
  "version": "0.1.0.1",
  "description": "Handy little thing to improve your SCP browsing experience",
  "icons": {
	"128": "SCP-logo-128.png",
	"48": "SCP-logo-48.png",
	"16": "SCP-logo-16.png"
  },
  "author": "Alexander \"FiftyNine\" Krivopalov",
  "background": {
	"scripts": ["defaultSettings.js", "eventPage.js"],
	"persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [{
        "matches": [
			"http://*/*",
			"https://*/*",		
			"*://www.scp-wiki.net/*", "*://scp-wiki.wikidot.com/*",
			"*://scpfoundation.ru/*", "*://scp-ru.wikidot.com/*",
			"*://ko.scp-wiki.net/*", "*://scp-kr.wikidot.com/*",
			"*://www.scp-wiki-cn.org/*",
			"*://fondationscp.wikidot.com/*",
			"*://scp-wiki.pl/*", "*://scp-pl.wikidot.com/*",
			"*://lafundacionscp.wikidot.com/*",
			"*://scp-th.wikidot.com/*",
			"*://ja.scp-wiki.net/*", "*://scp-jp.wikidot.com/*"
		],
        "js": [
		    "scpUtils.js", "linkEnhancer.js",
			"wikiUtils.js", "wikiPage.js", 
			"wikiForum.js", "wikiMain.js",
			"scpMain.js"
		],
		"run_at": "document_start"
  }],    
  "externally_connectable": {
        "matches": [
			"*://www.scp-wiki.net/*", "*://scp-wiki.wikidot.com/*",
			"*://scpfoundation.ru/*", "*://scp-ru.wikidot.com/*",
			"*://ko.scp-wiki.net/*", "*://scp-kr.wikidot.com/*",
			"*://www.scp-wiki-cn.org/*",
			"*://fondationscp.wikidot.com/*",
			"*://scp-wiki.pl/*", "*://scp-pl.wikidot.com/*",
			"*://lafundacionscp.wikidot.com/*",
			"*://scp-th.wikidot.com/*",
			"*://ja.scp-wiki.net/*", "*://scp-jp.wikidot.com/*"
		]
  },
  "web_accessible_resources": [
	"scpEventOverrides.js"
  ],
  "permissions": [
    "storage",
	"*://www.scp-wiki.net/*", "*://scp-wiki.wikidot.com/*",
	"*://scpfoundation.ru/*", "*://scp-ru.wikidot.com/*",
	"*://ko.scp-wiki.net/*", "*://scp-kr.wikidot.com/*",
	"*://www.scp-wiki-cn.org/*",
	"*://fondationscp.wikidot.com/*",
	"*://scp-wiki.pl/*", "*://scp-pl.wikidot.com/*",
	"*://lafundacionscp.wikidot.com/*",
	"*://scp-th.wikidot.com/*",
	"*://ja.scp-wiki.net/*", "*://scp-jp.wikidot.com/*"
  ]
}